            tips: document.getElementById('nav-tips')
        };

        // --- NAVIGATION LOGIC ---
        function switchView(viewName) {
            // Hide all views
            Object.values(views).forEach(el => el.classList.add('hidden'));
            
            // Reset Nav Active States
            Object.values(navButtons).forEach(btn => {
                if(btn) btn.className = btn.className.replace('bg-blue-600 text-white', 'hover:bg-slate-100');
                if(btn) btn.classList.remove('active');
            });

            // Show selected view
            if (viewName.startsWith('lesson')) {
                currentLessonKey = viewName;
                renderLesson(viewName);
                views.lesson.classList.remove('hidden');
                
                // Highlight Nav
                const btn = document.getElementById(`nav-${viewName}`);
                if(btn) btn.classList.add('active');

            } else if (viewName === 'dashboard') {
                views.dashboard.classList.remove('hidden');
                document.getElementById('nav-dashboard').classList.add('active');
            } else if (viewName === 'tips') {
                views.tips.classList.remove('hidden');
                document.getElementById('nav-tips').classList.add('active');
            }

            // Mobile nav close
            document.getElementById('mobile-nav').classList.add('hidden');
            window.scrollTo(0,0);
        }

        function toggleMobileNav() {
            const nav = document.getElementById('mobile-nav');
            nav.classList.toggle('hidden');
        }

        // --- LESSON RENDERING ---
        function renderLesson(lessonKey) {
            const data = lessonsData[lessonKey];
            document.getElementById('lesson-title').innerText = data.title;
            
            const listContainer = document.getElementById('scene-list');
            listContainer.innerHTML = '';

            data.scenes.forEach((scene, index) => {
                const card = document.createElement('div');
                card.className = `p-4 rounded-lg border border-slate-200 cursor-pointer hover:border-${data.color}-500 hover:shadow-md transition-all bg-white group`;
                card.onclick = () => updatePreview(scene, data.color);
                
                // Select first scene by default
                if(index === 0) updatePreview(scene, data.color);

                card.innerHTML = `
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <span class="w-8 h-8 rounded-full bg-slate-100 text-slate-500 flex items-center justify-center text-xs font-bold group-hover:bg-${data.color}-100 group-hover:text-${data.color}-600">
                                ${index + 1}
                            </span>
                            <div>
                                <h4 class="font-bold text-slate-700">${scene.title}</h4>
                                <p class="text-xs text-slate-400 truncate w-32 md:w-48">${scene.visual_notes}</p>
                            </div>
                        </div>
                        <i class="fas fa-chevron-right text-slate-300 group-hover:text-${data.color}-500"></i>
                    </div>
                `;
                listContainer.appendChild(card);
            });
        }

        // --- PREVIEW LOGIC ---
        function updatePreview(scene, colorTheme) {
            const previewBox = document.getElementById('slide-preview-box');
            const icon = document.getElementById('preview-icon');
            const textMain = document.getElementById('preview-text-main');
            const textSub = document.getElementById('preview-text-sub'); // Not strictly in data, using as subtitle/extra
            
            const metaSuggestion = document.getElementById('preview-suggestion');
            const metaIconName = document.getElementById('preview-icon-name');

            // Apply Theme Gradient
            const gradients = {
                blue: 'linear-gradient(135deg, #1e3a8a 0%, #172554 100%)', // Lesson 1
                indigo: 'linear-gradient(135deg, #312e81 0%, #1e1b4b 100%)', // Lesson 2
                orange: 'linear-gradient(135deg, #7c2d12 0%, #431407 100%)' // Lesson 3
            };

            previewBox.style.background = gradients[colorTheme] || gradients.blue;

            // Update Content
            icon.innerHTML = `<i class="${scene.icon_class}"></i>`;
            textMain.innerHTML = scene.visual_main;
            textSub.innerHTML = ""; // Clearing simple subtext as HTML structure handles it in main now
            
            metaSuggestion.innerText = scene.visual_notes;
            metaIconName.innerText = scene.icon_name;
        }

        // --- CHART INITIALIZATION ---
        function initCharts() {
            Chart.defaults.font.family = "'Inter', sans-serif";
            
            // Chart 1: Content Distribution (Doughnut)
            const ctx1 = document.getElementById('contentChart').getContext('2d');
            new Chart(ctx1, {
                type: 'doughnut',
                data: {
                    labels: ['Lesson 1 (Hardware)', 'Lesson 2 (Internet)', 'Lesson 3 (Office)'],
                    datasets: [{
                        data: [4, 4, 5], // Number of scenes per lesson
                        backgroundColor: ['#3B82F6', '#6366F1', '#F97316'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });

            // Chart 2: Topic Elements (Bar) - Proxied by "Key Visuals"
            const ctx2 = document.getElementById('topicChart').getContext('2d');
            new Chart(ctx2, {
                type: 'bar',
                data: {
                    labels: ['Hardware Parts', 'Software Apps', 'Network/Comms', 'Office Tools'],
                    datasets: [{
                        label: 'Key Visual Topics',
                        data: [4, 3, 2, 3], // Approximate count of items listed in visual description
                        backgroundColor: '#CBD5E1',
                        hoverBackgroundColor: '#0F172A',
                        borderRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { beginAtZero: true, ticks: { precision: 0 } },
                        x: { grid: { display: false } }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });
        }

        // --- INITIALIZATION ---
        window.addEventListener('DOMContentLoaded', () => {
            initCharts();
            // Start at dashboard
            switchView('dashboard');
        });

    </script>
</body>
</html>
